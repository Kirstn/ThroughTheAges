        .scroll-top.page-scroll.visible-xs.visble-sm
            a.btn.btn-primary(href='#page-top')
                i.fa.fa-chevron-up

    script(src='js/login-register/login-register.js')
    script(src='http://code.jquery.com/jquery.js')
    script(src='js/bootstrap/bootstrap.min.js')
    script(src='js/bootstrap/bootstrapValidator.min.js')

